	"Add shebang": { 
      
		"scope": "sh",

		"prefix": "shebang", 
  
		"body": [ 
  
			"#!/bin/bash",
  
	], 
  
	"description": "Add shebang to script" 
  
},
 
	"Add Case Statement": { 
		"scope": "sh",
		"prefix": "case",
		"body": 
		[
			"case $var in",
				" )",
					"# code if match",
					";;",
				" )",
					"# code if match",
					";;",
				" )",
					"# code if match",
					";;",
				"*) # default case",
					"# code if default case",
					";;",
				"esac",
		],
		"description": "Adds Case Statement Structure"
	},		
	
	"User Prompt": {
		"scope": "sh",
		"prefix": "promptuser",
		"body": 
		[
			"read -p 'The prompt text goes here: ' var",
		],
		"description": "Adds User Prompt"
	},

"Add And-Or Triple Test": {
	"scope": "sh",
	"prefix": "andortriple",
	"body": [
		"if [[ {andtest} ]] && ( [[ {oroption1} ]] || [[ {oroption1} ]] ); then",
			"# code if true",
		"else",
			"# code if false",
		"fi",
	],
	"description": "Adds IF-ELSE test with one AND and two OR options"
	
	},
"Add Color Variables": {
	"scope": "sh",
	"prefix": "colour",
	"body": [
		"# Color variables",
		"RED='\033[0;31m'",
		"GREEN='\033[0;32m'",
		"YELLOW='\033[0;33m'",
		"BLUE='\033[0;34m'",
		"MAGENTA='\033[0;35m'",
		"CYAN='\033[0;36m'",
		"RESET='\033[0m'"
	],
	"description": "Add shell color variables"
	}
	
}